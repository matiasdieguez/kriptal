<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Kriptal.App">
  <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#16DB9E</Color>
            <Color x:Key="PrimaryDark">#18A479</Color>
            <Color x:Key="Accent">#29abe2</Color>
            <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
            <Color x:Key="MediumGrayBackgroundColor">#C0C0C0</Color>
            <Color x:Key="DarkBackgroundColor">#000000</Color>
            <Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
            <Color x:Key="LightTextColor">#999999</Color>
            <Color x:Key="TransparentEntryColor">#99FFFFFF</Color>
            <Color x:Key="DarkTransparency">#90000000</Color>
            <Color x:Key="PrimaryLight">#33ffc0</Color>
            <Color x:Key="AccentDark">#2287aa</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
