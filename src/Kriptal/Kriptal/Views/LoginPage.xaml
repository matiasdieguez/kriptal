<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:Kriptal.Resources"
             x:Class="Kriptal.Views.LoginPage">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill" Source="background.png"/>
            <ScrollView Grid.Column="0" Grid.Row="0">
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Transparent" Orientation="Vertical" Spacing="5">
                    <Image 
                    HorizontalOptions="CenterAndExpand"
                    Source="kriptal.png" 
                    HeightRequest="60"
                    Aspect="AspectFit"
                    />
                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" IsEnabled="{Binding IsBusy}" />
                    <Entry 
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Start"
                    BackgroundColor="White"
                    Margin="20,0,20,0"
                    AutomationId="Name" 
                    FontSize="Small"
                    Text="{Binding Name}"
                    IsEnabled="{Binding IsNewAccount}"
                    IsVisible="{Binding IsNewAccount}"
                    Placeholder="{x:Static localization:AppResources.Name}"/>
                    <Entry
                    Keyboard="Email"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Start"
                    Margin="20,0,20,0"
                    BackgroundColor="White"
                    AutomationId="Email" 
                    FontSize="Small"
                    Text="{Binding Email}"
                    IsEnabled="{Binding IsNewAccount}"
                    IsVisible="{Binding IsNewAccount}"
                    Placeholder="{x:Static localization:AppResources.Email}"/>
                    <Entry 
                    x:Name="Password" 
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Start"
                    BackgroundColor="White"
                    Margin="20,0,20,0"
                    AutomationId="Password" 
                    FontSize="Small"
                    Text="{Binding Password}"
                    IsPassword="True" 
                    Placeholder="{x:Static localization:AppResources.Password}"/>
                    <Entry 
                    x:Name="RepeatPassword" 
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Start"
                    BackgroundColor="White"
                    Margin="20,0,20,0"
                    AutomationId="RepeatPassword" 
                    FontSize="Small"
                    Text="{Binding RepeatPassword}"
                    IsPassword="True" 
                    IsEnabled="{Binding IsNewAccount}"
                    IsVisible="{Binding IsNewAccount}"
                    Placeholder="{x:Static localization:AppResources.RepeatPassword}"/>
                    <Label 
                    FontSize="Small"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    Margin="20,0,20,0"
                    IsEnabled="{Binding IsNewAccount}"
                    IsVisible="{Binding IsNewAccount}"
                    Text="{Binding PasswordInfo}"/>
                    <Label
                    FontSize="Small"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    Margin="20,0,20,0"
                    BackgroundColor="Red"                    
                    TextColor="White"
                    Text="{x:Static localization:AppResources.PasswordWarning}"/>
                    <Button 
                    AutomationId="Enter" 
                    HorizontalOptions="CenterAndExpand"
                    FontSize="Small"
                    Text="{x:Static localization:AppResources.Enter}" 
                    Command="{Binding EnterCommand}"/>
                    <Label Text="{Binding Text}"/>
                    <Button 
                    AutomationId="Reset" 
                    HorizontalOptions="CenterAndExpand"
                    FontSize="Small"
                    IsEnabled="{Binding NotForNewAccount}"
                    IsVisible="{Binding NotForNewAccount}"
                    Text="{x:Static localization:AppResources.ResetAccount}" 
                    Command="{Binding ResetCommand}"/>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>